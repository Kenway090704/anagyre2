<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3c4c5"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_drawer_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_drawer_head_match"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/state_connect_tuoluo"
            android:button="@null"
            android:checked="false"
            app:layout_heightPercent="30%w"
            app:layout_marginBottomPercent="1%w"
            app:layout_marginRightPercent="10%w"
            app:layout_marginTopPercent="1%w"
            app:layout_widthPercent="30%w" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="#5c5c5c"
            app:layout_heightPercent="30%w"
            app:layout_marginBottomPercent="1%w"
            app:layout_marginTopPercent="1%w" />

        <CheckBox
            android:id="@+id/cb_drawer_head_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/delete"
            android:button="@null"
            android:checked="false"
            app:layout_heightPercent="30%w"
            app:layout_marginBottomPercent="1%w"
            app:layout_marginLeftPercent="7%w"
            app:layout_marginTopPercent="1%w"
            app:layout_widthPercent="35%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#5c5c5c" />

    <ListView
        android:id="@+id/lv_drawer_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:scrollbars="none" />
</LinearLayout>
