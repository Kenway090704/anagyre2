<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
     >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="60%h">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/play_image" />

            <ImageView
                android:id="@+id/player1_photo_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/tuoluo_open_bg"
                app:layout_heightPercent="86%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="7%"
                app:layout_widthPercent="80%"
                />
            <ImageView
                android:id="@+id/player1_tuoluo_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/tuoluo"
                app:layout_heightPercent="86%"
                app:layout_marginLeftPercent="25%"
                app:layout_marginTopPercent="7%"
                app:layout_widthPercent="50%"
                android:visibility="invisible"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_widthPercent="45%"
                app:layout_heightPercent="20%"
                android:src="@mipmap/vs_win"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:layout_marginBottomPercent="5%"
                android:id="@+id/vs_player1_result"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>



        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="15%"
            android:layout_marginTop="10dp"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_vs_content_player1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/play_fight_big"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="100%h"
                app:riv_oval="true"
                app:riv_border_width="@dimen/round_width"
                app:riv_border_color="#00ff00ff"
                />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="100%"
                android:visibility="invisible"
                android:id="@+id/vs_player1_info">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_widthPercent="50%">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/vs_player1_roundedImageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:src="#ffffff"
                        app:layout_heightPercent="80%"

                        app:layout_widthPercent="80%h"
                        app:riv_border_width="3dp"
                        app:riv_border_color="@color/fuchsia"
                        app:riv_mutate_background="true"
                        app:riv_oval="true" />

                </com.zhy.android.percent.support.PercentLinearLayout>


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"


                    app:layout_widthPercent="50%">

                    <com.aofei.tch.anagyre.other.widget.PercentTextView

                        app:layout_marginTopPercent="5%"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/vs_player1_name"
                        android:text="未连接用户"
                        app:baseScreenHeight="1200"
                        android:textSize="35px"
                        android:gravity="center_vertical"
                        app:layout_heightPercent="30%" />

                    <com.aofei.tch.anagyre.other.widget.PercentTextView
                        android:id="@+id/vs_player1_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ID:"
                        app:baseScreenHeight="1200"
                        android:textSize="35px"
                        android:gravity="center_vertical"
                        app:layout_heightPercent="30%" />

                    <com.aofei.tch.anagyre.other.widget.PercentTextView
                        android:id="@+id/vs_player1_exp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:baseScreenHeight="1200"
                        android:textSize="35px"
                        android:gravity="center_vertical"
                        android:text="经验值:"

                        app:layout_heightPercent="30%" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <Button
            android:id="@+id/btn_fragment_vs_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_btn_start"
            android:text="@string/vs_start"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="8%"
            app:layout_widthPercent="25%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>